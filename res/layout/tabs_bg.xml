<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabsLayout" android:layout_width="fill_parent"
	android:layout_height="30dp" android:background="@drawable/tab_bg_selector"
	android:gravity="center" android:orientation="vertical"
	android:paddingTop="5dp" android:paddingBottom="5dp"
	android:paddingLeft="3dp" android:paddingRight="3dp">

	<ImageView android:layout_height="wrap_content"
		android:id="@+id/imageViewTabs" android:layout_width="wrap_content"></ImageView>
	
	<TextView android:id="@+id/tabsText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="@drawable/tab_text_selector" />
		
</LinearLayout>