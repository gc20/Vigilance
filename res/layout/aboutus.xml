<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="10dp">
	<ImageView android:id="@+id/new_icon" android:layout_width="wrap_content"
		android:layout_marginRight="10dp" android:src="@drawable/new_icon"
		android:layout_gravity="top" android:layout_height="wrap_content" />
	<TextView android:id="@+id/text" android:layout_width="wrap_content"
		android:textColor="#FFF"
		android:text="@string/aboutUsDetails" android:layout_height="wrap_content"/>
</LinearLayout>